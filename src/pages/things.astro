---
import Layout from "../layouts/Layout.astro";
---

<Layout title="things">
  <main>
    <p>
      All the things I host on <a href="https://dawdle.space">dawdle.space</a>
    </p>
    <!-- <h1>Games</h1>
    <ul>
      <li></li>
    </ul> -->
    <div>
      <h1>Tools</h1>
      <ul>
        <li>
          >> <a href="https://lastfm-iceberg.dawdle.space">lastfm-iceberg</a>
          <p>
            A tool to generate an iceberg chart of your last.fm listening
            history
          </p>
        </li>
        <li>
          >> <a href="https://cringe.cc">cringe.cc</a>
          <p>A simple URL shortener with special rickroll features</p>
        </li>
      </ul>
    </div>
    <!-- <h1>Experiments</h1>
    <ul>
      <li></li>
    </ul> -->
  </main>
</Layout>

<style>
  main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    p {
      max-width: 25ch;
    }
  }

  main > div {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      li p {
        font-size: 0.8rem;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        margin-left: 1.9rem;
      }
    }
  }
</style>
