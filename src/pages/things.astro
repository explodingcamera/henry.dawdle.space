<style>
  main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 0 2rem;
    padding-bottom: 2rem;

    font-size: 1rem;

    @media (max-width: 600px) {
      font-size: 0.8rem;
    }

    p {
      max-width: 25ch;
    }
  }

  main > div {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    max-width: 50rem;

    ul {
      padding: 1rem;
      transition: background-color 0.2s;

      &:nth-child(1) {
        /* --color: #30e2ab; */
        --color: 48, 226, 171;
      }

      &:nth-child(2) {
        --color: 226, 48, 171;
      }

      &:nth-child(3) {
        --color: 226, 171, 48;
      }

      border: 1px solid rgb(var(--color));
      background-color: rgba(var(--color), 0.03);
      &:hover {
        background-color: rgba(var(--color), 0.1);
      }

      height: fit-content;
      border-radius: 15px;

      min-width: 30ch;
      list-style: none;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      h1 {
        font-size: 1.3em;
        opacity: 0.8;
        margin-bottom: 0.5rem;
      }

      li p {
        font-size: 1em;
        margin-top: 0.3rem;
        margin-bottom: 0.5rem;
        margin-left: 1.5rem;

        line-height: 1.5;
      }
    }
  }
</style>
